{
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true
  },
  "require": {
    "ext-json": "*",
    "monolog/monolog": "*",
    "mustache/mustache": "*",
    "phpmailer/phpmailer": "*",
    "robmorgan/phinx": "*",
    "jabarihunt/json-web-token": "^1.0",
    "vlucas/phpdotenv": "^4.1"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "Manevia\\": [
        "controllers/",
        "controllers/base/",
        "core/",
        "models/",
        "models/base/"
      ]
    }
  }
}